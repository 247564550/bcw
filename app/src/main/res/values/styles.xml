<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TransparentTheme" parent="Theme.AppCompat">
        <!-- 注意没有前面的Android: -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="editTextColor">@color/text_black</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/xml_gray_round_unsolid_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="dialog_animation" parent="android:Animation">
        <!-- //进入时的动画 -->
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <!-- //退出时的动画 -->
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="DialogFullscreen" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="user_star_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_orange</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">★</item>
    </style>

    <style name="user_edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/user_edittext_height</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lines">1</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColorHint">@color/text_light_gray</item>
    </style>

    <style name="btn_solid_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:background">@drawable/orange_round_corner_solid_button_icon</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
    </style>

    <style name="arrow_gray_right_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:src">@drawable/arrow_gray_right_icon</item>
    </style>

    <style name="shop_icon_style">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:src">@drawable/shop_icon</item>
    </style>

    <style name="own_item_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="account_item_parent_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/account_item_height</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:background">@drawable/xml_white_gray_selector</item>
    </style>

    <style name="account_item_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@color/gray_line</item>
    </style>

    <style name="account_item_left_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="account_item_right_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">@color/text_dark_gray</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="v_transparent_style">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#4c000000</item>
        <item name="android:onClick">onClick</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="pay_confirm_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="order_detail_bottom_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:background">@drawable/xml_white_gray_selector</item>
    </style>

</resources>
