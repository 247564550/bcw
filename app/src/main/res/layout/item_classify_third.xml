<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/classify_spacing_half">

    <com.kswl.baimucai.view.ProportionImageView
        android:id="@+id/iv_third"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/xml_rectangle_gray_line_bg"
        android:padding="1dp"
        android:scaleType="centerCrop"
        app:proportion_height="1"
        app:proportion_width="1"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_third"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:lines="1"
        android:singleLine="true"
        android:text="@string/default_text"
        android:textColor="@color/text_black"
        android:textSize="14sp"/>
</RelativeLayout>
