<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical"
    android:paddingTop="@dimen/user_padding"
    tools:context="com.kswl.baimucai.activity.user.UserInputPhoneFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_edittext_height"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/user_padding"
            android:paddingRight="@dimen/user_padding">

            <TextView style="@style/user_star_style"/>

            <EditText
                android:id="@+id/et_phone"
                style="@style/user_edittext_style"
                android:hint="@string/input_phone"
                android:inputType="phone"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/gray_horizontal_line_icon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_edittext_height"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/user_padding"
            android:paddingRight="@dimen/user_padding">

            <TextView style="@style/user_star_style"/>

            <EditText
                android:id="@+id/et_code"
                style="@style/user_edittext_style"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="@string/input_verifiy_code"
                android:inputType="number"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/gray_vertical_line_icon"/>

            <TextView
                android:id="@+id/tv_verify"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/get_verifiy_code"
                android:textColor="@color/text_orange"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/user_padding"
        android:paddingRight="@dimen/user_padding"
        android:paddingTop="8dp"
        android:text="@string/register_reminder"
        android:textColor="@color/text_light_gray"
        android:textSize="12sp"/>

    <Button
        android:id="@+id/btn_next"
        style="@style/btn_solid_style"
        android:layout_marginLeft="@dimen/user_padding"
        android:layout_marginRight="@dimen/user_padding"
        android:layout_marginTop="30dp"
        android:text="@string/next"/>

</LinearLayout>
